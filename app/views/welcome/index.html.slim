.pull-right
  = link_to 'To Upload A New Video', new_video_path, class: 'btn btn-success'
h1 Listing videos

- if @videos.present?
  table.table.table-stripped.table-hover
    thead
      tr
        th Title
        th Video
        th Format
        th User
        th Created at
    tbody
      - @videos.each do |video|
        tr
          td = video.title
          td = video_tag video.file, size: "320x240", controls: true
          td = video.file.file.try(:extension)
          td
          td = video.user.email
          td = video.created_at
          td = link_to 'Destroy', video, class: 'btn btn-danger', data: {confirm: 'Are you sure?'}, method: :delete
- else
  .alert.alert-warning No videos
